  <div id="form">
    <div class="ps-2">
      <!-- ! jika type "erros" ga undefined maka kondisi ga dijalankan,berarti gada eror -->
      <% if (typeof errors != "undefined") { %>
      <!-- ! alert BOOTSTRAP -->
      <div class="alert alert-danger" role="alert">
        <ul>
          <!-- ! foreach isi array errors -->
          <!-- ! isi dari array errors adalah object dan key nya msg,param,location,value -->
          <% errors.forEach((error,index) => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <!-- ! Method Post dan action ke halaman '/halamanInput' -->
      <!-- ! setiap data input sudah diberi atribut name -->
      <form
        method="post"
        action="/HalamanInput"
        class="container list form-container"
      >
        <h1>input barang</h1>
        <p>silahkan isi data barang : masuk</p>
        <div class="mb-3">
          <label for="namaBarang" class="form-label">nama barang</label>
          <!-- ! required = wajib isi input -->
          <!-- ! atribute name = variable yang akan diisikan ketika kita isi inputnya -->
          <input
            type="text"
            class="form-control"
            id="namaBarang"
            name="namaBarang"
            required
          />
        </div>
        <div class="mb-3">
          <label for="jumlahBarangMasuk" class="form-label"
            >jumlah barang masuk</label
          >
          <input
            type="text"
            class="form-control"
            id="jumlahBarangMasuk"
            name="jumlahBarangMasuk"
            required
          />
        </div>
        <div class="mb-3">
          <label for="totalHargaBeliBarang" class="form-label"
            >total harga beli barang</label
          >
          <input
            type="text"
            class="form-control"
            id="totalHargaBeliBarang"
            name="totalHargaBeliBarang"
          />
        </div>
        <div class="mb-3">
          <label for="tanggal" class="form-label"> tanggal</label>
          <input
            type="text"
            class="form-control"
            id="tanggal"
            name="tanggal"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
          tambah data contact
        </button>
      </form>
    </div>
