    >
      data barang masuk
    </h1>

    <div class="container">
      <table class="table overflow-scroll" id="table">
        <thead>
          <tr class="text-center">
            <th scope="col">no</th>
            <th scope="col">kode Barang</th>
            <th scope="col">nama Barang</th>
            <th scope="col">jumlah barang masuk</th>
            <th scope="col">total harga beli Barang</th>
            <th scope="col">tanggal</th>
            <th scope="col">status</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length == 0) { %>
          <tr>
            <td colspan="7">
              <div class="alert alert-danger" role="alert">
                <b>data contacts kosong ;</b>
              </div>
            </td>
          </tr>
          <% } else {%> <% contacts.forEach((contact,index) => { %>
          <tr class="text-center">
            <th scope="row"><%= index + 1 %></th>
            <td><%= contact.kodeBarang %></td>
            <td><%= contact.namaBarang %></td>
            <td><%= contact.jumlahBarangMasuk %></td>
            <td><%= contact.totalHargaBeliBarang %></td>
            <td><%= contact.tanggal %></td>
            <td>
              <!-- ! BUTTON DELETE  -->
              <!-- ! DELETE SESUAI DENGAN KODEBARANG -->
              <a
                href="/dataBarangMasuk/delete/<%= contact.kodeBarang %>"
                class="btn btn-danger"
                onclick="return confirm('yakin?')"
                >delete</a
              >
            </td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
